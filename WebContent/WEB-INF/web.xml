<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>toDoListWeb</display-name>
	<servlet>
		<display-name>LoginController</display-name>
		<servlet-name>LoginController</servlet-name>
		<servlet-class>il.ac.hit.todolist.controllers.LoginController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginController</servlet-name>
		<url-pattern>/LoginController</url-pattern>
	</servlet-mapping>

	<servlet>
		<display-name>LogoutController</display-name>
		<servlet-name>LogoutController</servlet-name>
		<servlet-class>il.ac.hit.todolist.controllers.LogoutController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogoutController</servlet-name>
		<url-pattern>/LogoutController</url-pattern>
	</servlet-mapping>

	<servlet>
		<display-name>DeleteController</display-name>
		<servlet-name>DeleteController</servlet-name>
		<servlet-class>il.ac.hit.todolist.controllers.DeleteController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteController</servlet-name>
		<url-pattern>/DeleteController</url-pattern>
	</servlet-mapping>

	<servlet>
		<display-name>NewItemController</display-name>
		<servlet-name>NewItemController</servlet-name>
		<servlet-class>il.ac.hit.todolist.controllers.NewItemController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NewItemController</servlet-name>
		<url-pattern>/NewItemController</url-pattern>
	</servlet-mapping>

	<servlet>
		<display-name>EditController</display-name>
		<servlet-name>EditController</servlet-name>
		<servlet-class>il.ac.hit.todolist.controllers.EditController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EditController</servlet-name>
		<url-pattern>/EditController</url-pattern>
	</servlet-mapping>

	<servlet>
		<display-name>TodoListController</display-name>
		<servlet-name>TodoListController</servlet-name>
		<servlet-class>il.ac.hit.todolist.controllers.TodoListController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TodoListController</servlet-name>
		<url-pattern>/TodoListController</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>Login.jsp</welcome-file>
	</welcome-file-list>
</web-app>